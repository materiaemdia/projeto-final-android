<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabiosalazar.projetoandroidfinal.EditarActivity">

    <EditText
        android:id="@+id/editarNome"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEditar"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnEditar"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:hint="@string/edit_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editarNome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="editar"
        android:text="@string/btn_edit" />

</RelativeLayout>
